<div class="login-container">
    <div class="login-card">
        <div class="login-card-header">
            <h1>Đăng Nhập</h1>
            <div>Vui lòng đăng nhập để sử dụng dịch vụ</div>
        </div>
        <form action="" class="login-card-form">
            <div class="form-item">
                <span class="form-item-icon material-symbols-outlined">person</span>
                <input type="text" placeholder="Nhập tài khoản" required autofocus>
            </div>
            <div class="form-item">
                <span class="form-item-icon material-symbols-outlined">lock</span>
                <input type="password" placeholder="Nhập mật khẩu" required autofocus>
            </div>
            <div class="form-other-item">
                <div class="checkbox">
                    <input type="checkbox" id="rememberCheckbox">
                    <label for="remberCheckbox">Nhớ mật khẩu</label>
                </div>
                <a href="#">Quên mật khẩu</a>
            </div>
            <button type="submit">Đăng nhập</button>
        </form>

    </div>
</div>